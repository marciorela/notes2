@model IEnumerable<Usuario>

<h2>@ViewBag.Title</h2>

<div class="mb-2">
    <a class="btn btn-outline-secondary" asp-action="AddEdit" asp-controller="Usuarios">Adicionar</a>
</div>

<div>
    <table class="table table-hover">

        <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Data de Criação</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@item.DataCadastro</td>
                    <td>
                        <a class="btn btn-sm btn-outline-dark" asp-action="AddEdit" asp-controller="Usuarios" asp-route-id="@item.Id">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>