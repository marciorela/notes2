@model UsuarioEditVM

    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="Nome"></label>
            <input class="form-control" asp-for="Nome" autofocus />
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="PasswordRetype"></label>
            <input class="form-control" asp-for="PasswordRetype" />
            <span class="text-danger" asp-validation-for="PasswordRetype"></span>
        </div>

        <div>
            <button class="btn btn-outline-info" type="submit">Salvar</button>
            <a class="btn btn-outline-dark" asp-controller="Usuarios" asp-action="Index">Voltar</a>
        </div>
    </form>

@section scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
